@{
    Layout = "_Layout";
}
@model CankutayUcarCV.Web.Models.KullaniciGuncelleViewModel

<form asp-action="Index" asp-controller="Home" asp-area="Admin" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label class="form-label">Ad : </label>
        <input asp-for="AD" class="form-control" />
    </div>

    <div class="form-group">
        <label class="form-label">Soyad : </label>
        <input asp-for="SOYISIM" class="form-control" />
    </div>

    <div class="form-group">
        <label class="form-label">Tel : </label>
        <input asp-for="TELEFON_NUMARASI" class="form-control" />
    </div>

    <div class="form-group">
        <label class="form-label">Açıklama : </label>
        <input asp-for="ACIKLAMA" class="form-control" />
    </div>

    <div class="form-group">
        <label class="form-label">Adres : </label>
        <input asp-for="ADRES" class="form-control" />
    </div>

    <div class="form-group row">
        <div class="col-6">

            @{
                if (!string.IsNullOrWhiteSpace(Model.FOTOGRAF_URL))
                {
                    <label>Bir önceki resminiz</label>
                    <img src="~/img/@Model.FOTOGRAF_URL" alt="@Model.AD" style="height: 4rem; width: 5rem;" />
                }
                else
                {
                    <div class="alert alert-light text-center">
                        Herhangi bir resim sistemde kayıtlı değil
                    </div>
                }
            }
        </div>
        <div class="col-6">
            <label>Resim seç</label>
            <input type="file" asp-for="Picture" class="form-control form-control-file" />
        </div>
    </div>

    <div class="form-group mt-5">
        <button type="submit" class="btn btn-outline-warning text-center text-info">Kaydet</button>
    </div>
</form>
@await Component.InvokeAsync("NToastNotify")